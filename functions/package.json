{
  "name": "swift-slots-functions",
  "version": "0.1.0",
  "description": "Firebase Cloud Functions for Swift Slots",
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "serve": "firebase emulators:start --only functions,firestore",
    "shell": "firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "lint": "eslint \"src/**/*.ts\"",
    "setup": "ts-node scripts/setupEnv.ts",
    "seed": "ts-node scripts/seedTestData.ts",
    "deploy:full": "npm run build && firebase deploy --only functions,firestore:indexes",
    "init": "ts-node scripts/initProject.ts",
    "local": "bash ../scripts/runLocal.sh"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  }
}
